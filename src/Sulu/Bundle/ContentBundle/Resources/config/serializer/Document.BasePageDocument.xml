<?xml version="1.0" encoding="UTF-8"?>
<serializer>
    <class name="Sulu\Bundle\ContentBundle\Document\BasePageDocument" xmlns:h="https://github.com/willdurand/Hateoas">
        <h:relation rel="self">
            <h:href route="get_node">
                <h:parameter name="uuid" value="expr(object.getUuid())"/>
                <h:parameter name="language" value="expr(object.getLocale())"/>
            </h:href>
            <h:exclusion groups="defaultPage"/>
        </h:relation>
        <h:relation rel="children">
            <h:href route="get_nodes">
                <h:parameter name="parent" value="expr(object.getUuid())"/>
                <h:parameter name="depth" value="1"/>
                <h:parameter name="webspace" value="expr(object.getWebspaceName())"/>
                <h:parameter name="language" value="expr(object.getLocale())"/>
            </h:href>
            <h:exclusion groups="defaultPage"/>
        </h:relation>

        <property name="nodeName" type="string"/>
        <property name="title" type="string" groups="defaultPage,smallPage,preview"/>
        <property name="creator" type="integer" groups="defaultPage,preview"/>
        <property name="changer" type="integer" groups="defaultPage,preview"/>
        <property name="created" type="DateTime" groups="defaultPage,preview"/>
        <property name="published" type="DateTime" groups="defaultPage,smallPage,preview"/>
        <property name="changed" type="DateTime" groups="defaultPage,preview"/>
        <property name="resourceSegment" type="string" groups="preview"/>
        <property name="navigationContexts" type="array" serialized-name="navContexts" groups="defaultPage,smallPage,preview"/>
        <property name="redirectType" type="integer" serialized-name="nodeType" groups="defaultPage,smallPage,preview"/>
        <property name="redirectTarget" type="sulu_document"/>
        <property name="redirectExternal" type="string"/>
        <property name="workflowStage" type="integer" serialized-name="nodeState" groups="defaultPage,smallPage,preview"/>
        <property name="shadowLocale" type="string" serialized-name="shadowBaseLanguage" groups="defaultPage,preview"/>
        <property name="shadowLocaleEnabled" type="boolean" serialized-name="shadowOn" groups="defaultPage,preview"/>
        <property name="uuid" type="string" serialized-name="id" groups="defaultPage,smallPage,preview,preview"/>
        <property name="structureType" type="string" groups="preview"/>
        <property name="originalLocale" type="string" groups="preview"/>
        <property name="locale" type="string" groups="preview"/>
        <property name="path" exclude="true"/>
        <property name="internal" type="boolean" groups="defaultPage,preview"/>
        <property name="webspaceName" type="string" groups="preview"/>
        <property name="extensions" type="Sulu\Component\Content\Document\Extension\ExtensionContainer" serialized-name="ext" groups="defaultPage,preview"/>
        <property name="structure" type="Sulu\Component\Content\Document\Structure\Structure" groups="preview"/>
        <property name="children" groups="preview" type="Sulu\Component\DocumentManager\Collection\ChildrenCollection"/>
        <property name="suluOrder" type="integer" serialized-name="order" groups="defaultPage,smallPage,preview"/>
        <property name="permissions" exclude="true" groups="preview"/>

        <virtual-property method="getResourceSegment" name="url" serialized-name="url" groups="defaultPage,smallPage,preview"/>
    </class>
</serializer>
